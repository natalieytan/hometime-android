<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.AccentButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.BorderlessDarkButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@color/primary_dark</item>
        <item name="android:textColor">@color/highlight</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>
